---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/main.scss";
const { title, description } = Astro.props;
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{`${title}`}</title>
    <meta
      name="description"
      content={description.replace(/<[^>]*>/g, "").trim()}
    />
    <meta name="author" content="Agence Buzz" />
    <meta property="og:title" content={`${title}`} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta
      property="og:description"
      content={description.replace(/<[^>]*>/g, "").trim()}
    />
    <meta property="og:image" content="" />

    <!-- FavIcon -->
    <!-- Generateur : https://realfavicongenerator.net/ -->
    <link
      rel="icon"
      type="image/png"
      href={Astro.site?.href + "/favicons/favicon-96x96.png"}
      sizes="96x96"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href={Astro?.site?.href + "/favicons/favicon.svg"}
    />
    <link
      rel="shortcut icon"
      href={Astro.site?.href + "/favicons/favicon.ico"}
    />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href={Astro.site?.href + "/favicons/apple-touch-icon.png"}
    />
    <link rel="manifest" href="/site.webmanifest" />
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
